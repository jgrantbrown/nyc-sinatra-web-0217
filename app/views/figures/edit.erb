<h1>Edit <%= @figure.name %> </h1>


<form method="POST" action='/figures/<%=@figure.id %>' >
 <input type="hidden" name="_method" value="patch">

  <p><label> Figure Name: </label>
    <input type='text' name='figure[name]' id='figure_name' value='<%= @figure.name%>'
  <p>

  <p>Edit Titles:</p>
      <%@titles.each do |title|%>
          <input type = "checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"<%='checked' if @figure.titles.include?(title) %> >
          <%=title.name%>
      <%end%>

    <p><label>Add New Title:</label>
       <input type="text" id="new_title" name="title[name]"></p><br></br>

  <p>Edit Landmarks:</p>
      <% @landmarks.each do |landmark| %>
      <%= landmark.name %>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%=landmark.name %>"<%='checked' if @figure.landmarks.include?(landmark) %>>
      <%end%>

      <p><label>Add New Landmark:</label></p>
 <input type="text" id="new_landmark" name="landmark[name]"><br></br>


<p>
<input type='submit' value="Edit Figure">
</p>
</form>
